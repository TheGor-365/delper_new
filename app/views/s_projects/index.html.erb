<h3 class="mb-5">
  All technologies projects
</h3>


<% @technologies.each do |technology| %>

  <h6>
    <span class="text-muted"><%= technology.title %></span> projects <span class="badge badge-primary badge-pill"><%= technology.projects.count %></span>
  </h6>

  <% technology.projects.each do |project|%>

    <small>
      Project id: <span class="text-muted">#<%= project.id %></span>
    </small>

    <div class="shadow-lg mt-5 mb-5 p-5">

      <small class="text-muted">
        Title: <%= project.title %>
      </small><br>

      <div class="p-3 mt-3 mb-3 bg-light">
        <p>
          <%= project.body %>
        </p>
      </div>

      <%= link_to 'Show', technology_project_path(technology, project), class: 'text-decoration-none mr-3' %>
      <%= link_to 'Delete', technology_project_path(technology, project), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-decoration-none mr-3' %>
      <%= link_to 'Edit', edit_technology_project_path(technology, project), method: :put, class: 'text-decoration-none mr-3' %>
      <%= link_to 'Create', new_technology_project_path(technology, project), class: 'text-decoration-none mr-3' %>
    </div>
  <% end %>
<% end %>
