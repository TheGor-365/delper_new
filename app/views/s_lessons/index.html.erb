<h3 class="mb-5">
  All technologies lessons
</h3>


<% @technologies.each do |technology| %>

  <h6>
    <span class="text-muted"><%= technology.title %></span> lessons <span class="badge badge-primary badge-pill"><%= technology.lessons.count %></span>
  </h6>

  <% technology.lessons.each do |lesson|%>

    <small>
      Lesson id: <span class="text-muted">#<%= lesson.id %></span>
    </small>

    <div class="border rounded p-3 mt-3 mb-5 bg-light">

      <small class="text-muted">
        Title: <%= lesson.title %>
      </small><br>

      <div class="border rounded p-3 mt-3 mb-3 bg-white">
        <p>
          <%= lesson.body %>
        </p>
      </div>

      <%= link_to 'Show', technology_lesson_path(technology, lesson), class: 'text-decoration-none mr-3' %>
      <%= link_to 'Delete', technology_lesson_path(technology, lesson), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-decoration-none mr-3' %>
      <%= link_to 'Edit', edit_technology_lesson_path(technology, lesson), method: :put, class: 'text-decoration-none mr-3' %>
      <%= link_to 'Create', new_technology_lesson_path(technology, lesson), class: 'text-decoration-none mr-3' %>
    </div>
  <% end %>
<% end %>
