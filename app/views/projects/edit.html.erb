<h6>
  <b>Edit <span class="text-muted">project #<%= @project.id %></span> <%= @technology.title %></b>
</h6>

<div class="border bg-light rounded p-5 mt-5">
  <%= form_for :project, url: technology_project_path(@technology, @project), method: :put do |f| %>

    <%= f.label :title %>
    <%= f.text_area :title, required: true, class: 'form-control mb-3' %>

    <%= f.label :body %>
    <%= f.text_field :body, class: 'form-control mb-3' %>

    <%= f.submit 'Edit lesson', class: 'btn btn-primary btn-sm mt-2' %>

    <%= link_to "Back to lessons", technology_projects_path(@technology), class: 'btn btn-secondary btn-sm mt-2' %>

  <% end %>
</div>
