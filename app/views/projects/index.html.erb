<h6>
  <span class="text-muted"><%= @technology.title %></span> projects
</h6>
<% @projects.each do |project| %>

  <small class="text-muted">
    Project id: #<%= project.id %>
  </small><br>

  <div class="shadow-lg mt-5 mb-5 p-5">

    <small>
      <span class="text-muted">Project:</span>
    </small>

    <p>
      <%= project.title %>
    </p>

    <div class="p-3 bg-light mt-3 mb-3">
      <p>
        <%= project.body %>
      </p>
    </div>

    <div class="p-3">
      <%= link_to 'Show', technology_project_path(@technology, project), class: 'text-decoration-none mr-3' %>
      <%= link_to 'Delete', technology_project_path(@technology, project), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-decoration-none mr-3' %>
      <%= link_to 'Edit', edit_technology_project_path(@technology, project), class: 'text-decoration-none mr-3' %>
      <%= link_to 'Create', new_technology_project_path, class: 'text-decoration-none mr-3' %>
    </div>
  </div>
<% end %>
