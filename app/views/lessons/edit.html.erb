<h6>
  <b>Edit <span class="text-muted">lesson #<%= @lesson.id %></span> <%= @technology.title %></b>
</h6>

<div class="shadow-lg mt-5 mb-5 p-5">
  <%= form_for :lesson, url: technology_lesson_path(@technology, @lesson), method: :put do |f| %>

    <fieldset>
      <%= f.label :title %>
      <%= f.text_field :title, required: true, class: 'form-control mb-3' %>
    </fieldset>

    <%= f.label :body %>
    <%= f.text_field :body, class: 'form-control mb-3' %>

    <%= f.submit 'Edit lesson', class: 'btn btn-primary btn-sm mt-2' %>

    <%= link_to "Back to lessons", technology_lessons_path(@technology), class: 'btn btn-secondary btn-sm mt-2' %>

  <% end %>
</div>
