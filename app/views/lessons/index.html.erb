<h6>
  <span class="text-muted"><%= @technology.title %></span> lessons
</h6>
<% @lessons.each do |lesson| %>

  <small class="text-muted">
    Lesson: <%= lesson.title %>
  </small>

  <div class="shadow-lg mt-5 mb-5 p-5">
    <small class="text-muted">
      Lesson-id: #<%= lesson.id %>
    </small>

    <div class="p-3 bg-light mt-5 mb-5 ml-1">
      <p>
        <%= lesson.body %>
      </p>
    </div>

    <hr>
    <%= link_to 'Show', technology_lesson_path(@technology, lesson), class: 'text-decoration-none mr-3' %>
    <%= link_to 'Delete', technology_lesson_path(@technology, lesson), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-decoration-none mr-3' %>
    <%= link_to 'Edit', edit_technology_lesson_path(@technology, lesson), class: 'text-decoration-none mr-3' %>
    <%= link_to 'Create', new_technology_lesson_path, class: 'text-decoration-none mr-3' %>
    <hr>
  </div>

<% end %>
