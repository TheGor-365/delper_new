<h6>
  <b>Edit <span class="text-muted">answer #<%= @question.answers.find(params[:id]).id %> for question #<%= @question.id %></span> | <%= @technology.title %></b>
</h6>

<small class="text-muted">
  <%= @question.question %>
</small>

<div class="shadow-lg mt-5 mb-5 p-5">
  <%= form_for :answer, url: technology_question_answer_path(@technology, @question, @question.answers.find(params[:id])), method: :put do |f| %>

    <fieldset>
      <%= f.label :shortcut %>
      <%= f.text_area :shortcut, required: true, class: 'form-control mb-3' %>
    </fieldset>

    <%= f.label :snippet %>
    <%= f.text_area :snippet, required: true, class: 'form-control mb-3' %>

    <%= f.label :explain %>
    <%= f.text_field :explain, class: 'form-control mb-3' %>

    <%= f.submit 'Edit answer', class: 'btn btn-primary btn-sm mt-2' %>

    <%= link_to "Back to answers", technology_question_answers_path(@technology, @question), class: 'btn btn-secondary btn-sm mt-2' %>

  <% end %>
</div>
