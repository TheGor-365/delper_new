<h6>
  <b>Edit <span class="text-muted">question #<%= @question.id %></span> <%= @technology.title %></b>
</h6>

<div class="shadow-lg mt-5 mb-5 p-5">
  <%= form_for :question, url: technology_question_path(@technology, @question), method: :put do |f| %>

    <fieldset>
      <%= f.label :question %>
      <%= f.text_area :question, required: true, class: 'form-control mb-3' %>
    </fieldset>

    <%= f.label :snippet %>
    <%= f.text_field :snippet, class: 'form-control mb-3' %>

    <%= f.submit 'Edit lesson', class: 'btn btn-primary btn-sm mt-2' %>

    <%= link_to "Back to questions", technology_questions_path(@technology), class: 'btn btn-secondary btn-sm mt-2' %>

  <% end %>
</div>
