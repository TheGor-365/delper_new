
<div>
  <b><%= @technology.title %> <span class="text-muted">question #<%= @question.id %></span></b>
</div>

<div class="shadow-lg mt-5 mb-5 p-5">

  <small class="text-muted">
    Question
  </small>
  <div class="border bg-light p-3 mb-2">
    <small>
      <%= @question.question %>
    </small>
  </div>

  <small class="text-muted">
    Answer
  </small>
  <div class="border bg-light p-3 mb-2">
    <p>
      <%= @question.snippet %>
    </p>
  </div>

  <%= link_to "Back to lessons", technology_questions_path(@technology), class: 'btn btn-secondary btn-sm mt-2' %>
</div>
